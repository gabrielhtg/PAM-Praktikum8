<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_primary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/profile"
        android:id="@+id/profile_pict"/>

    <TextView
        android:layout_marginStart="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gabriel Cesar Hutagalung"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/nama_user"
        app:layout_constraintTop_toBottomOf="@id/profile_pict"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Profile"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#C5C5C5"
        app:layout_constraintTop_toBottomOf="@id/nama_user"
        app:layout_constraintStart_toStartOf="@id/nama_user"
        android:id="@+id/btn_view_profile"/>

</androidx.constraintlayout.widget.ConstraintLayout>